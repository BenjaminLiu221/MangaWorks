@model MangaIndexGenreIndex

<div class="row pb-3 pt-3"
    <div class="row pb-3 pt-3" style="width:950px"
        <div class="row pb-3 pt-3" style="width:950px">
            <link rel="stylesheet" href="~/css/bootswatchTheme.css" />
                @foreach (var mangaObj in Model.MangaList)
                {
                        <div class="col-lg-2 col-md-2" style="/*border:1px solid #008cba;*/ height:200px; width:475px">
                            <div class="row p-2">
                            @*images could be different sizes, hard coding px for now...*@
                                <div class="col-12 p-2" style="/*border:1px solid #008cba;*/ border-radius:5px; height:180px; width:138px">
                                    <div class="card" style="height:100%; border-style:double">
                                        <img src="@mangaObj.ImageUrl" class="card-img-top" style="object-fit:cover; height:inherit" />
                                    </div>
                                </div>
                            @*MangaTitle and Author*@
                                <div class="col-12 p-2" style="/*border:1px solid #008cba;*/ border-radius:5px; height:contain; width:69.8%">
                                    <div class="container pt-1" style="border:solid; height:100%; max-width: 20rem">
                                        <a asp-action="Details" class="text-primary" style="text-align:left" asp-route-id="@mangaObj.Id">
                                            <h3 style="font-weight:bold"> @mangaObj.Title</h3>
                                        </a>
                                        <p class="card-text" style="font-style:italic">@mangaObj.Author.Name</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                }
        </div>
    </div>
    <div class="card" style="width:300px">
        <div class="row pb-3 pt-3" style="width:300px">
            <link rel="stylesheet" href="~/css/bootswatchTheme.css" />
            @foreach (var mangaObj in Model.GenreList)
            {
                <div class="col-lg-3 col-md-3" style="width:100px">
                    <div class="col-12 p-2" style="width:100px">
                        <a asp-action="MangaByGenres" class="text-primary" style="text-align:left" asp-route-id="@mangaObj.Value">
                            @*<h3 style="font-weight:bold"> @mangaObj.Text</h3>*@
                            <p class="card-text" style="font-weight:bold;width:100px">@mangaObj.Text</p>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>