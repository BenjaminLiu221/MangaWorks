@model MangaDetails


<div style="color:black; font-weight:bold; width:100%; padding:10px; background-color:rgba(var(--bs-dark-rgb)">
    <div style="display:flex; width:70%">
        <div class="card-img" style="width:13vw; padding:5px; background-color:gray">
            <img src="@Model.Manga.ImageUrl" style="padding-left:5px; width:12vw; object-fit:contain; float:left">
        </div>
        <div style="padding:5px; width:100%; background:darkgray">
            <div>
                <p style="font-size:large; padding-left:5px; margin:0">@Model.Manga.Title</p>
            </div>
            <div style="display:flex">
                <p style="padding-left:5px; margin:0; min-width:100px"><i class="bi bi-book">Author(s) :</i></p>
                <p style="padding-left:5px; margin:0">@Model.Manga.Author.Name</p>
            </div>
            <div style="display:flex">
                <p style="padding-left:5px; margin:0; min-width:100px"><i class="bi bi-book">Genres :</i></p>
                <p style="padding-left:5px; margin:0">@Model.Manga.MangaGenres</p>
            </div>
            <div style="display:flex">
                <p style="padding-left:5px; margin:0; min-width:100px"><i class="bi bi-alarm">Updated :</i></p>
                <p style="padding-left:5px; margin:0">@Model.Manga.Updated</p>
            </div>
            <div style="display:flex">
                <p style="padding-left:5px; margin:0; min-width:100px"><i class="bi bi-eyeglasses">View :</i></p>
                <p style="padding-left:5px; margin:0">@Model.Manga.Views</p>
            </div>
            <div style="display:flex">
                <p style="padding-left:5px; margin:0; min-width:100px"><i class="bi bi-star">Rating :</i></p>
                <p style="padding-left:5px; margin:0">@Model.Manga.Rating</p>
            </div>
        </div>
    </div>
</div>
<div style="color:black; font-weight:bold; width:100%; padding:10px; background-color:rgba(var(--bs-dark-rgb)">
    <div style="width:70%; background:gray">
        <p style="padding-bottom:0; font-size:large; font-weight:bold">Description :</p>
        <p>@Html.Raw(Model.Manga.Description)</p>
    </div>
</div>