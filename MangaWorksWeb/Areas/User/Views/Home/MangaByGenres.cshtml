@model MangaByGenre

<div class="row">
    <div class="col-10">
        <div class="row">
            <div class="col-10">
                <div class="row pt-3 pb-1 pl-3" style="width:1250px">
                    <link rel="stylesheet" href="~/css/bootswatchTheme.css" />
                    @foreach (var mangaObj in Model.MangaList)
                    {
                        <div class="col-lg-2 col-md-2" style="height:250px; width:50%; padding-left:12px">
                            <div class="row p-2" style="width:600px;background:gray">
                                <div class="col-12 p-2" style="height:220px; width:27%; padding-left:12px">
                                    <div class="card" style="height:100%; border-style:double; padding:0px">
                                        <img src="@mangaObj.ImageUrl" class="card-img-top" style="object-fit:cover; height:inherit" />
                                    </div>
                                </div>
                                <div class="col-12 pt-3" style="height:contain; width:69.8%">
                                        <a asp-action="Details" class="text-primary" style="text-align:left" asp-route-id="@mangaObj.Id">
                                            <h5 style="font-weight:bold"> @mangaObj.Title</h5>
                                        </a>
                                        <p class="card-text" style="font-style:italic">@mangaObj.Author.Name</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>