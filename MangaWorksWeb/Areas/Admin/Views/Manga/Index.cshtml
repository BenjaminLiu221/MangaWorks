@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Manga List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Manga" asp-action="Upsert" class="btn btn-warning">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Manga
            </a>
        </div>
    </div>
    <br /><br />

    <table id="tblData" class="table table-secondary table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Genres</th>
                <th>Author</th>
                <th>Status</th>
                <th>Chapters</th>
                @*<th>Updated</th>*@
                @*<th>Rating</th>*@
                @*<th>Views</th>*@
                @*<th></th>*@
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
<script src="~/js/manga.js"></script>
}