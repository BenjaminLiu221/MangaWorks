@model Chapter

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <input asp-for="MangaId" hidden />
    @*class border of 3 and margin top of 4*@
    <div class="border p-3 mt-4">
        @*class row and padding bottom of 2*@
        <div class="row pb-2">
            <h2 class="text-primary">Create Chapter</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="ChapterNumber"></label>
            <input asp-for="ChapterNumber" class="form-control" />
            <span asp-validation-for="ChapterNumber" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-warning" style="width:150px">Create</button>
        <a asp-controller="Manga" asp-action="Chapter" class="btn btn-secondary" style="width:150px">
            Back to Chapter List
        </a>
    </div>
</form>

@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}
}