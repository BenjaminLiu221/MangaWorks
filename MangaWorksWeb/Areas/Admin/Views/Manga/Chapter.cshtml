@model IEnumerable<Chapter>
@{
    ViewData["Title"] = "Chapter";
}

@{
    var chapterObj = Model.FirstOrDefault();

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Chapter List</h2>
            </div>
        </div>
    </div>
    @*<br /><br />*@
}

<input asp-for="@chapterObj.MangaId" hidden />

<table class="table table-secondary table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Chapter Number
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.ChapterNumber
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Manga" asp-action="ChapterDetails" asp-route-chapterId="@obj.Id"
                       class="btn btn-primary mx-2"> View Chapter</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@*Model is a list of chapter objs*@
@{
    <div class="col-12">
        <a asp-controller="Manga" asp-action="Upsert" class="btn btn-primary" style="width:180px" asp-route-id="@(chapterObj==null?0:@chapterObj.MangaId)">
            Back to Manga
        </a>
    </div>
}