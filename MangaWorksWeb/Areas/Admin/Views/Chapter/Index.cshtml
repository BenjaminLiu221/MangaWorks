@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Chapter List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Chapter" asp-action="Upsert" class="btn btn-warning">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Chapter
            </a>
        </div>
    </div>
    @*justify-content-between for alignment to left and right side*@
    <div class="row pt-4">
        <form name="form1" id="form1" action="/action_page.php">
            <select name="subject" id="subject">
                <option value="" selected="selected">Select Manga</option>
            </select>
            <br><br>
        </form>
    </div>
    <br /><br />

    <table id="tblData" class="table table-secondary table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Manga</th>
                <th>Chapter</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
<script src="~/js/chapter.js"></script>
}