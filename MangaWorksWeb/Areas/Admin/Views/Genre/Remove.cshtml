@model Genre

<form method="post" asp-action="Remove">
    <input asp-for="Id" hidden />
    @*class border of 3 and margin top of 4*@
    <div class="border p-3 mt-4">
        @*class row and padding bottom of 2*@
        <div class="row pb-2">
            <h2 class="text-primary">Remove Genre</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Remove</button>
        <a asp-controller="Genre" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}
}