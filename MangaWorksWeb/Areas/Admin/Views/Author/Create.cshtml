@model Author

<form method="post">
    @*class border of 3 and margin top of 4*@
    <div class="border p-3 mt-4">
        @*class row and padding bottom of 2*@
        <div class="row pb-2">
            <h2 class="text-primary">Create Author</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-warning" style="width:150px">Create</button>
        <a asp-controller="Author" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}
}